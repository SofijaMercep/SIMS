<Page x:Class="SIMS.Views.Doktor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Doktor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Background="YellowGreen">
            <Button Name="btnLekovi" Height="30" Background="LightSeaGreen" Foreground="White" Click="btnLekovi_Click">Pregled lekova</Button>
            <Button Name="btnOdobravanje" Height="30" Background="LightSeaGreen" Foreground="White" Click="btnOdobravanje_Click">Odobravanje lekova</Button>
            <Button Name="btnLogout" Height="30" Background="LightSeaGreen" Foreground="White" Click="btnLogout_Click">Logout</Button>
        </StackPanel>

        <Frame Name="contentFrame" Grid.Column="1" Background="DeepSkyBlue"></Frame>
    </Grid>
</Page>
