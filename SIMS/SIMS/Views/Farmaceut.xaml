<Page x:Class="SIMS.Views.Farmaceut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Farmaceut">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Background="YellowGreen">
            <Button Name="btnLijekovi" Height="30" Background="LightSeaGreen" Foreground="White" Click="btnLijekovi_Click">Pregled lijekova</Button>
            <Button Name="btnOdobravanje" Height="30" Background="LightSeaGreen" Foreground="White" Click="btnOdobravanje_Click">Odobravanje lijekova</Button>
            <Button Name="btnOdbijeni" Height="30" Background="LightSeaGreen" Foreground="White" Click="btnOdbijeni_Click">Odbijeni lijekovi</Button>
            <Button Name="btnLogout" Height="30" Background="LightSeaGreen" Foreground="White" Click="btnLogout_Click">Logout</Button>
        </StackPanel>

        <Frame Name="contentFrame" Grid.Column="1" Background="DeepSkyBlue"></Frame>
    </Grid>
</Page>
